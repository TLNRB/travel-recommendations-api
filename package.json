{
  "name": "travel-recommendations-api",
  "version": "1.0.0",
  "description": "MongoDB Express Node TypeScript REST API for travel recommendations db",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "dev": "npx nodemon",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed": "npx ts-node ./src/util/dataSeeder.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TLNRB/travel-recommendations-api.git"
  },
  "author": "tlnrb",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TLNRB/travel-recommendations-api/issues"
  },
  "homepage": "https://github.com/TLNRB/travel-recommendations-api#readme",
  "nodemonConfig": {
    "verbose": false,
    "watch": [
      "src"
    ],
    "ext": "js,ts",
    "exec": "npx ts-node ./src/index.ts",
    "ignore": [
      "node_modules"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.15.0",
    "mongoose": "^8.12.2",
    "nodemon": "^3.1.9",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.11",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "xss": "^1.0.15"
  }
}
